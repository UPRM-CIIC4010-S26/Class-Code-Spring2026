{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++17",
                "-g",
                "*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build and Run (Classes)",
            "type": "shell",
            "problemMatcher": ["$gcc"],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "osx": {
                "command": "/bin/bash",
                "args": ["-c", "cd ${workspaceFolder}/classes && make && ./main"]
            },
            "linux": {
                "command": "/bin/bash",
                "args": ["-c", "cd ${workspaceFolder}/classes && make && ./main"]
            },
            "windows": {
                "command": "cmd",
                "args": ["/c", "cd ${workspaceFolder}\\classes && make && main.exe"]
            }
        }
    ]
}
